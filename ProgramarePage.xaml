<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolApp.ProgramarePage"
             Title="ProgramarePage">

    <StackLayout Padding="20">
        <DatePicker x:Name="dataPicker" />
        <Entry Placeholder="Locația lecției" x:Name="adresaEntry" />
        <Picker x:Name="teacherPicker" Title="Selectează Profesor" />
        <Picker x:Name="studentPicker" Title="Selectează Student" />
        <Button Text="Salvează" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>