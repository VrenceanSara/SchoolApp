<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolApp.MemberDetailsPage"
             Title="MemberDetailsPage">

    <StackLayout Padding="20">
        <Label Text="Nume:" />
        <Entry Text="{Binding Nume}" />

        <Label Text="Prenume:" />
        <Entry Text="{Binding Prenume}" />

        <Label Text="Email:" />
        <Entry Text="{Binding Email}" />

        <Label Text="Număr Telefon:" />
        <Entry Text="{Binding NumarTelefon}" />

        <Label Text="Adresă:" />
        <Entry Text="{Binding Adresa}" />

        <Button Text="Salvează" Clicked="OnSaveButtonClicked" />
        <Button Text="Șterge" Clicked="OnDeleteButtonClicked" />
    </StackLayout>
</ContentPage>